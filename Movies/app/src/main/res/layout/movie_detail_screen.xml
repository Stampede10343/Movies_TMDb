<?xml version="1.0" encoding="utf-8"?>
<com.dev.cameronc.movies.moviedetail.MovieDetailScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/movie_detail_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:id="@+id/movie_detail_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.Toolbar
                android:id="@+id/movie_detail_toolbar"
                style="@style/Toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="Movie Detail" />

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/movie_detail_poster"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintDimensionRatio="1.5"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@drawable/were_the_millers" />

                <TextView
                    android:id="@+id/movie_detail_title"
                    style="@style/DetailItemTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:maxLines="2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/movie_detail_poster"
                    tools:text="The Shawshank Redemption (1997)" />

                <TextView
                    android:id="@+id/movie_detail_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="16dp"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textStyle="bold"
                    android:visibility="gone"
                    app:layout_constraintEnd_toStartOf="@id/movie_detail_runtime"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/movie_detail_title"
                    tools:text="R"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/movie_detail_runtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/movie_duration"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toStartOf="@id/movie_detail_rating_average"
                    app:layout_constraintStart_toEndOf="@id/movie_detail_rating"
                    app:layout_constraintTop_toBottomOf="@id/movie_detail_title"
                    tools:text="139 minutes"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/movie_detail_rating_average"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    app:layout_constraintEnd_toStartOf="@id/movie_detail_rating_average_image"
                    app:layout_constraintStart_toEndOf="@id/movie_detail_runtime"
                    app:layout_constraintTop_toBottomOf="@id/movie_detail_title"
                    tools:text="8.7" />

                <ImageView
                    android:id="@+id/movie_detail_rating_average_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_thumbs_up_down"
                    android:tint="?android:attr/textColorPrimary"
                    android:visibility="gone"
                    app:layout_constraintStart_toEndOf="@id/movie_detail_rating_average"
                    app:layout_constraintTop_toBottomOf="@id/movie_detail_title"
                    tools:visibility="visible" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/movie_detail_genre_list"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="4dp"
                    android:visibility="invisible"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/movie_detail_rating"
                    tools:itemCount="4"
                    tools:layoutManager="GridLayoutManager"
                    tools:listitem="@layout/genre_tag_layout"
                    tools:spanCount="5"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/movie_detail_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/movie_detail_genre_list"
                    tools:text="This is a description about the Shawshank redemption" />

                <TextView
                    android:id="@+id/movie_detail_cast_section"
                    style="@style/SectionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/cast"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/movie_detail_description" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/movie_detail_actors"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/movie_detail_cast_section"
                    tools:layoutManager="GridLayoutManager"
                    tools:listitem="@layout/actor_grid_item" />

                <TextView
                    android:id="@+id/movie_detail_review_text"
                    style="@style/SectionTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/reviews"
                    app:layout_constraintTop_toBottomOf="@id/movie_detail_actors" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/movie_detail_reviews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@id/movie_detail_review_text"
                    tools:layoutManager="LinearLayoutManager"
                    tools:listitem="@layout/movie_review" />

                <TextView
                    android:id="@+id/movie_detail_related_text"
                    style="@style/SectionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/related"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/movie_detail_reviews" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/movie_detail_related_movies"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/movie_detail_related_text"
                    tools:layoutManager="GridLayoutManager"
                    tools:listitem="@layout/related_movie_item" />
            </android.support.constraint.ConstraintLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <ViewStub
        android:id="@+id/gallery_pager_stub"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inflatedId="@+id/gallery_viewgroup"
        android:layout="@layout/gallery_view" />
</com.dev.cameronc.movies.moviedetail.MovieDetailScreen>