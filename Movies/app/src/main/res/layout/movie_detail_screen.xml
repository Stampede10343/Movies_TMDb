<?xml version="1.0" encoding="utf-8"?>
<com.dev.cameronc.movies.moviedetail.MovieDetailScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/movieDetailScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="?attr/contentStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/movie_detail_toolbar"
            style="@style/Toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Movie Detail" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/movie_detail_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="8dp" />
    </LinearLayout>

    <include
        layout="@layout/gallery_view"
        android:visibility="gone" />
</com.dev.cameronc.movies.moviedetail.MovieDetailScreen>